{
    "Workcases": {
      "MorningRoutine": {
        "Actions": [
          {
            "Type": "PrintAction",
            "Params": {
              "message": "Good morning ${name}!"
            }
          },
          {
            "Type": "SleepAction",
            "Params": {
              "duration": 2
            }
          },
          {
            "Type": "PrintAction",
            "Params": {
              "message": "Time for breakfast."
            }
          }
        ]
      },
      "EveningRoutine": {
        "Actions": [
          {
            "Type": "PrintAction",
            "Params": {
              "message": "Good evening!"
            }
          },
          {
            "Type": "SleepAction",
            "Params": {
              "duration": 3
            }
          },
          {
            "Type": "PrintAction",
            "Params": {
              "message": "Time to relax."
            }
          }
        ]
      }
    },
    "PrintAndAppendRoutine": {
      "Actions": [
        {
          "Type": "PrintAction",
          "Params": {
            "message": "Attempting to append to file."
          }
        },
        {
          "Type": "AppendFileAction",
          "Params": {
            "filePath": "./messages.txt",
            "contentToAppend": "Hello, world!"
          }
        }
      ]
    },
    "FileCreationRoutine": {
      "Actions": [
        {
          "Type": "CreateFileAction",
          "Params": {
            "filePath": "./messages.txt"
          }
        },
        {
          "Type": "PrintAction",
          "Params": {
            "message": "File created successfully."
          }
        }
      ]
    }
  }
  